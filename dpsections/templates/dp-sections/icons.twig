{% include 'templates/dp-sections/section-parts/section_icon.twig' %}
<h2 id="danzerpress-title-1" class="danzerpress-title" style="margin-top: 0px; margin-bottom: 50px;">{{ layout.section_title }}</h2>
<div class="danzerpress-four-fifths danzerpress-col-center">
	<div class="danzerpress-flex-row danzerpress-row-fix">
	    {% for sub in layout.icons_repeater %}
	       <div class="danzerpress-col-{{ layout.number_of_rows }} danzerpress-md-2 danzerpress-sm-2 danzerpress-xs-1">
				<div class="danzerpress-content-wrap">
					{% if (sub.image) %}
						<div class="danzerpress-icon-box wow zoomIn">
							<img src="{{ sub.image }}">
						</div>
					{% endif %}
					<div class="danzerpress-content-box wow fadeInUp">
						<h4>{{ sub.title }}</h4>
						<p>{{ sub.description }}</p>
					</div>
				</div>
			</div>
	    {% endfor %}
	</div>
	{% include 'templates/dp-sections/section-parts/content-buttons.twig' %}
</div>